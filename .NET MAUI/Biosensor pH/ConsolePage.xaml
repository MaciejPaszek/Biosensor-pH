<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Biosensor_pH___MAUI.ConsolePage"
             Title="Konsola">

    <Grid ColumnSpacing="10"
          RowSpacing="10"
          Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Picker
            x:Name="PickerPortName"
            Grid.Column="0"
            Grid.Row="0"
            SelectedIndexChanged="PickerPortName_SelectedIndexChanged"/>

        <Button
            x:Name="ButtonRefreshPortNames"
            Grid.Column="1"
            Grid.Row="0"
            Text="Odśwież"
            Clicked="ButtonRefreshPortNames_Clicked"/>

        <Button
            x:Name="ButtonConnectDisconnect"
            Grid.Column="2"
            Grid.Row="0"
            Text="Połącz"
            Clicked="ButtonConnectDisconnect_Clicked"/>

        <Editor
            x:Name="EditorOutput"
            Grid.Column="0"
            Grid.ColumnSpan="3"
            Grid.Row="1"
            AutoSize="TextChanges"
            FontFamily="Consolas"
            FontSize="16.0"
            IsReadOnly="True"/> 

        <Entry
            x:Name="EntryCommand"
            Grid.Column="0"
            Grid.Row="2"
            Placeholder="Komenda"
            FontFamily="Consolas"
            FontSize="16.0"
            IsEnabled="False"
            Completed="EntryCommand_Completed"/>

        <Button
            x:Name="ButtonSend"
            Grid.Column="1"
            Grid.Row="2"
            Text="Wyślij"
            IsEnabled="False"
            Clicked="ButtonSend_Clicked"/>

        <Button
            x:Name="ButtonClear"
            Grid.Column="2"
            Grid.Row="2"
            Text="Wyczyść"
            Clicked="ButtonClear_Clicked"/>
    </Grid>
</ContentPage>